@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<div class="container mt-5">
    <div class="d-flex justify-content-end">
        <div class="dropdown">
            <button id="profileDropdown" class="btn btn-light d-flex align-items-center">
                <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Avatar">
                <span>Eucharia Odili</span>
            </button>
            <div id="profileMenu" class="dropdown-menu p-3 shadow-sm">
                <p class="mb-1 fw-bold">Eucharia Odili</p>
                <p class="text-muted small mb-2">Administrator</p>
                <p class="text-muted small mb-3">odilieucharia1@gmail.com</p>
                <a href="#" class="dropdown-item"><i class="fas fa-user-edit me-2"></i> Edit profile</a>
                <a href="#" class="dropdown-item"><i class="fas fa-cogs me-2"></i> Widget settings</a>
                <a href="#" class="dropdown-item"><i class="fas fa-star me-2"></i> Upgrade to professional</a>
                <div class="dropdown-divider"></div>
                <a href="#" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt me-2"></i> Log out</a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const profileDropdown = document.getElementById("profileDropdown");
        const profileMenu = document.getElementById("profileMenu");

        profileDropdown.addEventListener("click", function () {
            profileMenu.classList.toggle("show");
        });

        document.addEventListener("click", function (event) {
            if (!profileDropdown.contains(event.target) && !profileMenu.contains(event.target)) {
                profileMenu.classList.remove("show");
            }
        });
    });
</script>
<style>
    .dropdown-menu {
        position: absolute;
        right: 0;
        left: auto;
        display: none;
    }

        .dropdown-menu.show {
            display: block;
        }
</style>